{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "globalSetup": "./test/setup.ts",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^common/(.*)$": "<rootDir>/src/common/$1",
    "^modules/(.*)$": "<rootDir>/src/modules/$1"
  },
  "moduleDirectories": ["node_modules", "src"]
}
