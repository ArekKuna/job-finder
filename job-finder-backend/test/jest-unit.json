{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "unit/",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^common/(.*)$": "<rootDir>/../../src/common/$1",
    "^modules/(.*)$": "<rootDir>/../../src/modules/$1"
  },
  "moduleDirectories": ["node_modules", "src"]
}
